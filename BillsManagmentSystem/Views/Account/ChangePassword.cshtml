@using BillsManagmentSystem.ViewModels;
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ChangePassword</h1>

<div class="row">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-6">
        <form asp-action="ChangePassword" asp-controller="Account">
           
            <div class="form-group">
                <label asp-for="@Model.CurrentPassword" class="col-form-label"></label>
                <input asp-for="@Model.CurrentPassword" type="password" class="form-control" required />
                <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword" class="col-form-label"></label>
                <input asp-for="@Model.NewPassword" type="password" class="form-control" required />
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
      
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}