			var invoiceNoInput = $("#invoicNo");
			var vendorNameInput = $("#vendorName");
			var storeNameInput = $("#storeName");
			var dateInput = $("#dateAdded");
			

			invoiceNoInput.on("blur", validateInvoiceNo);
