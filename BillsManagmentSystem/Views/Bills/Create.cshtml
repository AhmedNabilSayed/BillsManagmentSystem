@using BillsManagmentSystem.ViewModels;

@{
	var Vendor = new SelectList(ViewBag.Vendor, "VndCod", "VndNam");
	var Items = new SelectList(ViewBag.Items, "ItmCod", "ItmNam");
	var Stores = new SelectList(ViewBag.Stores, "Id", "Name");

