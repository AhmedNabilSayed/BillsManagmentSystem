@using BillsEntity;

@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h1>All Users</h1>
<br />
<a asp-controller="User" asp-action="Create" class="btn btn-primary">Create User</a>
<br />
<br />


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.UserName)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
                <th>@Html.DisplayNameFor(x => x.PhoneNumber)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <partial name="_ButtonsPartialView" model="item.Id.ToString()" />
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Users Found!!</h4>
    </div>
}
